extends ../layout/index

block content
    main.container.mt-5
        .row
            .col-md-12
                h1.text-center #{pageTitle}
                blockquote.text-center Read The Experiences From Our Clients
                include ../layout/partials/testimonials
            .col-md-12
                h2.text-center Add a Testimonial

                if(errors)
                    each error in errors
                        .alert.alert-danger.text-center=error.message

                .row.justify-content-center
                    .col-md-8
                        form(action="/testimonials", method="POST")
                            .form-group
                                label(for="name") Name
                                input(value=name type="text", id="name", class="form-control", placeholder="Your Name", name="name")
                            .form-group
                                label(for="email") Email
                                input(value=email type="email", id="email", class="form-control", placeholder="Your Email", name="email")
                            .form-group
                                label(for="message") Message
                                textarea#message(value=message name="message", rows="3", class="form-control", placeholder="Your Testimonial")
                            input(type="submit", class="btn btn-success btn-block", value="Add Testimonial")
                                